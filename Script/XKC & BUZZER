#include <WiFi.h>
#include <PubSubClient.h>

// --- 1. SETTING WIFI & MQTT ---
const char* ssid = "NAMA_WIFI_KAMU";       // Pastikan WiFi 2.4GHz
const char* password = "PASSWORD_WIFI";    
const char* mqtt_server = "broker.emqx.io";
const int mqtt_port = 1883;
const char* topic_status = "proyek/air/status_fauzan";

// --- 2. SETTING PIN ---
const int pinSensor = 15; // Sensor NPN
const int pinBuzzer = 18; // Buzzer Alarm

WiFiClient espClient;
PubSubClient client(espClient);
unsigned long lastMsg = 0;

void setup_wifi() {
  delay(10);
  Serial.print("Menghubungkan ke WiFi: ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nWiFi Terhubung!");
}

void reconnect() {
  while (!client.connected()) {
    Serial.print("Koneksi MQTT...");
    String clientId = "ESP32Client-" + String(random(0xffff), HEX);
    if (client.connect(clientId.c_str())) {
      Serial.println("Berhasil!");
    } else {
      Serial.print("Gagal, rc=");
      Serial.print(client.state());
      delay(5000);
    }
  }
}

void setup() {
  Serial.begin(115200);
  
  // Setup Sensor & Buzzer
  pinMode(pinSensor, INPUT_PULLUP);
  pinMode(pinBuzzer, OUTPUT);
  
  // Matikan buzzer saat awal nyala (biar gak kaget)
  digitalWrite(pinBuzzer, LOW); 
  
  setup_wifi();
  client.setServer(mqtt_server, mqtt_port);
}

void loop() {
  if (!client.connected()) {
    reconnect();
  }
  client.loop();

  // Kirim data & Cek Alarm setiap 2 detik
  unsigned long now = millis();
  if (now - lastMsg > 2000) {
    lastMsg = now;
    
    int sensorState = digitalRead(pinSensor);
    String msg;

    // --- LOGIKA UTAMA ---
    // NPN Active Low:
    // LOW (0) = Kena Air (Aman)
    // HIGH (1) = Kering (Bahaya/Habis)

    if (sensorState == LOW) {
      // KONDISI: ADA AIR
      msg = "ADA AIR ðŸŒŠ";
      digitalWrite(pinBuzzer, LOW); // Matikan Buzzer ðŸ”‡
    } 
    else {
      // KONDISI: KERING (GALON HABIS)
      msg = "KERING â›”";
      
      // Bunyikan Alarm (Beep pendek)
      // Kita pakai tone pendek biar tidak mengganggu loop MQTT
      digitalWrite(pinBuzzer, HIGH); 
      delay(200); 
      digitalWrite(pinBuzzer, LOW);
      // (Buzzer akan bunyi 'Tit' setiap 2 detik sekali)
    }

    // Kirim ke Serial Monitor & HP
    Serial.print("Status: ");
    Serial.println(msg);
    client.publish(topic_status, msg.c_str());
  }
}
