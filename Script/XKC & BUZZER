#include <WiFi.h>
#include <PubSubClient.h>

// ==========================================
// 1. SETTING WIFI KAMPUS
// ==========================================
const char* ssid = "ITS-WIFI-TW2"; 
const char* password = "itssurabaya"; 

// ==========================================
// 2. SETTING MQTT BROKER (DOSEN)
// ==========================================
const char* mqtt_server = "10.4.67.183"; 
const int mqtt_port = 1883;
const char* mqtt_user = "kelasb";        
const char* mqtt_pass = "kelasb";        

// ==========================================
// 3. TOPIK 5027241102
// ==========================================
const char* topic_status = "b/5027141102/status"; 

// ==========================================
// 4. PIN KABEL
// ==========================================
const int pinSensor = 15; // Kabel Kuning Sensor
const int pinBuzzer = 18; // Kaki Panjang (+) Buzzer

WiFiClient espClient;
PubSubClient client(espClient);
unsigned long lastMsg = 0;

void setup_wifi() {
  delay(10);
  Serial.println();
  Serial.print("Menghubungkan ke WiFi: ");
  WiFi.begin(ssid, password);
  
  int retry = 0;
  while (WiFi.status() != WL_CONNECTED && retry < 20) {
    delay(500);
    Serial.print(".");
    retry++;
  }
  
  if(WiFi.status() == WL_CONNECTED){
    Serial.println("\nâœ… WiFi Terhubung!");
  } else {
    Serial.println("\nâš ï¸ Masuk Mode OFFLINE.");
  }
}

void reconnect() {
  if(WiFi.status() != WL_CONNECTED) return;
  while (!client.connected()) {
    Serial.print("Menghubungkan ke Server Dosen...");
    String clientId = "Mhs-5027141102-" + String(random(0xffff), HEX);
    if (client.connect(clientId.c_str(), mqtt_user, mqtt_pass)) {
      Serial.println("BERHASIL!");
    } else {
      Serial.print("Gagal, rc=");
      Serial.print(client.state());
      break; 
    }
  }
}

void setup() {
  Serial.begin(115200);
  
  pinMode(pinSensor, INPUT_PULLUP); 
  pinMode(pinBuzzer, OUTPUT);
  
  // Pastikan Buzzer Mati saat awal nyala
  digitalWrite(pinBuzzer, LOW); 
  
  setup_wifi();
  client.setServer(mqtt_server, mqtt_port);
}

void loop() {
  if (WiFi.status() == WL_CONNECTED) {
    if (!client.connected()) reconnect();
    client.loop();
  }

  // --- PEMBACAAN SENSOR ---
  int sensorState = digitalRead(pinSensor);

  // ==========================================
  // LOGIKA BUZZER (UTAMA)
  // ==========================================
  if (sensorState == HIGH) { 
    // KONDISI: AIR HABIS / KERING
    // Buzzer akan menyala terus sebagai alarm
    digitalWrite(pinBuzzer, LOW); 
  } 
  else { 
    // KONDISI: ADA AIR
    // Buzzer mati total
    digitalWrite(pinBuzzer, HIGH); 
  }

  // --- PENGIRIMAN DATA KE MQTT (TIAP 2 DETIK) ---
  unsigned long now = millis();
  if (now - lastMsg > 2000) {
    lastMsg = now;
    
    String msg = (sensorState == LOW) ? "AMAN: Ada Air ðŸŒŠ" : "BAHAYA: Galon Habis! â›”";
    Serial.println(msg);
    
    if (client.connected()) {
      client.publish(topic_status, msg.c_str());
    }
  }
}
